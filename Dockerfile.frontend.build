# Dockerfile para build do frontend
FROM node:20-alpine

WORKDIR /app

# Copiar arquivos de dependências
COPY package*.json ./

# Instalar dependências
RUN npm ci

# Copiar código fonte
COPY . .

# Build da aplicação
RUN npm run build:prod

# Copiar arquivos buildados para o volume
CMD ["sh", "-c", "cp -r /app/dist/* /app/dist-build/ && echo 'Frontend buildado e copiado para volume'"]

